{
 "name": "koa-slonik-ts-starter",
 "version": "0.0.0",
 "description": "a template project based on koa and slonik",
 "main": "server.js",
 "author": "arthur ming",
 "license": "MIT",
 "scripts": {
  "ts-node-dev": "node --max_old_space_size=4096 ./node_modules/.bin/ts-node-dev",
  "build": "tsc",
  "build:watch": "tsc --watch",
  "start": "yarn run build && node --max_old_space_size=4096 server.js",
  "start:dev": "yarn ts-node-dev --require tsconfig-paths/register --require dotenv/config server.ts",
  "prepare": "is-ci || husky install"
 },
 "dependencies": {
  "@koa/router": "^12.0.0",
  "dotenv": "^16.0.3",
  "koa": "^2.13.4",
  "koa-bodyparser": "^4.3.0",
  "koa-compress": "^5.1.0",
  "koa-morgan": "^1.0.1",
  "slonik": "^23.9.0",
  "slonik-interceptor-preset": "^1.2.10"
 },
 "devDependencies": {
  "@commitlint/cli": "^17.1.1",
  "@commitlint/config-conventional": "^17.1.0",
  "@types/koa": "^2.13.5",
  "@types/koa__router": "^12.0.0",
  "@typescript-eslint/eslint-plugin": "^5.35.1",
  "@typescript-eslint/parser": "^5.35.1",
  "eslint": "^8.23.0",
  "eslint-config-prettier": "^8.5.0",
  "husky": "^8.0.0",
  "is-ci": "^3.0.1",
  "lint-staged": "^13.0.3",
  "prettier": "^2.7.1",
  "ts-node": "^10.9.1",
  "ts-node-dev": "^2.0.0",
  "tsconfig-paths": "^4.1.0",
  "typescript": "^4.8.2"
 }
}
